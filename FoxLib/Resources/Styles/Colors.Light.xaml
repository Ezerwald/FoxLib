<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Brand Colors -->
    <Color x:Key="Primary">#E75D3A</Color>
    <Color x:Key="Secondary">#FFD4B8</Color>
    <Color x:Key="Tertiary">#DBB7BC</Color>

    <!-- Neutral / Text Colors -->
    <Color x:Key="TextPrimary">#1F1F1F</Color>
    <Color x:Key="TextSecondary">#757575</Color>
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>

    <!-- Background / Surface Colors -->
    <Color x:Key="Background">#FDFDFD</Color>
    <Color x:Key="Surface">#FFFFFF</Color>

    
    
    
    <!-- Brand Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}" />
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}" />

    <!-- Neutral / Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}" />
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource ColorTextOnPrimary}" />

    <!-- Background / Surface Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}" />

</ResourceDictionary>